<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_activity"
    tools:context=".profileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/anotherProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/anotherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_below="@+id/anotherProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/anotherStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="profile Status"
        android:layout_below="@+id/anotherName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/anotherRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Request Message"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:padding="8dp"
        android:background="@drawable/buttons"
        android:textColor="@color/colorTitle"
        android:layout_below="@id/anotherStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>


    <Button
        android:id="@+id/anotherDeclineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Request"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:padding="8dp"
        android:background="@drawable/buttons"
        android:textColor="@color/colorTitle"
        android:layout_below="@id/anotherRequestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>


</RelativeLayout>