<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneNumberActivity">

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Write your phone number here ..."
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:drawableStart="@drawable/phone"/>
    <Button
        android:id="@+id/phoneSendOtpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/phoneVerifyEditText"
        android:layout_alignParentStart="true"
        android:text="Send verification code"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:textColor="@color/colorTitle"
        android:textAllCaps="false"
        />


    <EditText
        android:id="@+id/phoneVerifyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:layout_below="@+id/phoneEditText"
        android:hint="Enter verification code..."
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:drawableStart="@drawable/password"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/phoneVerifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/phoneSendOtpButton"
        android:layout_alignParentStart="true"
        android:text="Verify"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:textColor="@color/colorTitle"
        android:textAllCaps="false"
        android:visibility="invisible"
        />




</RelativeLayout>