<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/recieverPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reciever Portion"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/reciever_message_layout"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/recieverImagePart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"

        />

    <ImageView
        android:id="@+id/senderImagePart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="@id/recieverImagePart"
        android:scaleType="centerCrop"

        />




    <TextView
        android:id="@+id/senderPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Portion"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="@id/recieverPart"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_message_layout"
        />

    

</RelativeLayout>